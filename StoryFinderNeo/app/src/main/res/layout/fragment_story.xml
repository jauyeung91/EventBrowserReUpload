<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_below="@+id/story_image"
        android:layout_alignParentEnd="true"
        android:padding="20dp"
        android:background="@drawable/fragment_story_shape"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">

        <TextView
            android:id="@+id/story_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/story_title"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/story_desc"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/story_description" />

        <TextView
            android:id="@+id/story_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/story_name" />

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/story_image"
        android:contentDescription="@null"
        android:src="@drawable/matrix"
        android:adjustViewBounds="true" />

</RelativeLayout>