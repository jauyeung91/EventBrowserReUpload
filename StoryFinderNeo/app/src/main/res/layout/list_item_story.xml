<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:padding="20dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/shape"
        android:padding="10dp">

        <TextView
            android:id="@+id/list_item_story_title_text_view"
            android:textColor="#212121"
            android:padding="5dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Story Title"
            android:textStyle="bold"
            android:layout_marginBottom="20dp"
            android:background="@drawable/title_rounding"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <ImageView
            android:id="@+id/list_item_story_image_image_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@null"
            android:src="@drawable/matrix"
            android:layout_below="@+id/list_item_story_title_text_view"
            android:adjustViewBounds="true"
            />

        <TextView
            android:id="@+id/list_item_story_name_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#212121"
            tools:text="Story Name"
            android:layout_below="@+id/list_item_story_image_image_view"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/list_item_story_desc_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Story Description"
            android:layout_below="@+id/list_item_story_name_text_view"
            android:layout_alignParentStart="true" />

         <TextView
            android:id="@+id/list_item_story_imageURL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="imageview"
            android:layout_below="@+id/list_item_story_desc_text_view"
            android:layout_alignParentStart="true" />




    </RelativeLayout>


</LinearLayout>